/* pages/restaurant/restaurant.wxss */
.card-container{
  display: flex;
  flex-direction: row;
  width: 710rpx;
  height: 300rpx;
  margin: 10rpx 20rpx;
  border: 1px solid #f1f1f1;
}
.cards{
  display: flex;
  flex-direction: column;
  width: 410rpx;
  height: 300rpx;
  align-items: flex-start;
}
.card{
  height: 80rpx;
  width:auto;
  overflow: hidden;
  margin: 20rpx 0 0 20rpx;
}
.txtaddress{
  line-height: 80rpx;
}
.txtname{
  font-size: 40rpx;
  line-height: 110rpx;
}
.txtaddres{
  font-size: 30rpx;
  overflow-wrap: normal;
}
.card-pic{
  width: 300rpx;
  height: 300rpx;
}
.imgcard{
  width: 300rpx;
  height: 300rpx;
}
.restaurantContainer{
  width: 710rpx;
  height: 816rpx;
  display: flex;
  flex-direction: row;
  border-top: solid 1px #464646;
  border-bottom:solid 1px #464646;
  margin: 20rpx 20rpx 0;
  z-index: -1;
}
.category{
  width: 30%;
  background-color: #f0f0f0;
  border-right: solid 1px #000000; 
  display: flex;
  flex-direction: column;
  align-items: center;

}
.wholeCategory{
  width: 100%;
  height: 80rpx;
  background-color: #f0f0f0;
  border-bottom:solid 1px #464646;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.txtWhole{
font-size: 20px;
  line-height: 80rpx;
  font-weight: bold;
}
.categoryItem{
  
  height: 60rpx;
  margin-top: 10rpx;
  width:100% ;
  text-align: center;
}
.txtItem{
  font-size: 20px;
}
.back_active{
  background-color: #fff;
}
.dishes{
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dishContainer{
  width: 100%;
  height: 200rpx;
  border-bottom:solid 1px #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.dish{
  width: 65%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.dishName{
  height: 120rpx;
  margin-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
}
.txtName{
  font-size: 15px;
  line-height: 120rpx;
}
.dishPrice{
  height: 70rpx;
  margin-left: 20rpx;
}
.txtprice{
  line-height: 70rpx;
}
.grade{
  width: 35%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.txtgrade{
  line-height: 200rpx;
  font-size: 15px;
}
.socre{
width: 410rpx;
height: 60rpx;
margin-left: 20rpx;
}
.txtsocre{
  line-height: 60rpx;
}

